<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <report
        id="minimum_report_id"
        string="Stock por debajo del minimo"
        model="product.product"
        report_type="qweb-pdf"
        file="dtm_minimum_stock.minimum_stock_report"
        name="dtm_minimum_stock.minimum_stock_report"
        menu="True"
    />

    <template id="minimum_stock_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.external_layout">
                    <div class="page">
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th>Cantidad Disponible</th>
                                    <th>Stock MÃ­nimo</th>
                                    <th>Cantidad Necesaria</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="stock" t-as="o">
                                    <td>
                                        <span t-field="o.name" />
                                    </td>
                                    <td>
                                        <span t-field="o.virtual_available" />
                                    </td>
                                    <td>
                                        <span t-field="o.qty_minimum" />
                                    </td>
                                    <td>
                                        <span t-esc="o.qty_minimum - o.virtual_available"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</data>
</openerp>

