<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>        
        <record id="action_dtm_minimum_stock_wizard" model="ir.actions.act_window">
            <field name="name">Reporte de Stock</field>
            <field name="res_model">minimum.stock.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="dtm_minimum_stock_wizard" model="ir.ui.view" >
            <field name="name">minimum.stock.wizard.view</field>
            <field name="model">minimum.stock.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Stock">
                    <p class="oe_gray">
                        Evalua el inventario de productos y devuelve los articulos cuya cantidad disponible están por debajo del stock mínimo configurado.
                    </p>
                    <footer>
                        <button name="imprimir_repote_stock" string="Imprimir Stock" type="object"  class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
              </form>
            </field>
        </record>

        <menuitem action="action_dtm_minimum_stock_wizard" id="product_product_minimum_stock_action" parent="stock.next_id_61" sequence="10"/>
</data>
</openerp>        