<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_carga_oportunidades_button" model="ir.ui.view">
            <field name="name">Carga oportunidades</field>
            <field name="model">carga_oportunidades</field>
            <field name="arch" type="xml">
                <form string="Carga de oportunidades" version="7.0">
                    <group>
                        <group>
                            <field name="archive" required="True"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" type="object" name="ingresa_oportunidades"  string="Procesar" />
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
               </form>
            </field>
        </record>


        <record id="action_carga_oportunidades_button_button" model="ir.actions.act_window">
            <field name="name">Carga oportunidades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">carga_oportunidades</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_carga_oportunidades_button"/>
            <field name="target">new</field>
            <field name="multi">True</field>
            <field name="key2">client_action_multi</field>
        </record>


        <record model="ir.values" id="ir_values_oportunidades">
            <field name="model_id" ref="crm.model_crm_lead" />
            <field name="name">Oportunidades</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_carga_oportunidades_button_button'))" />
            <field name="key">action</field>
            <field name="model">crm.lead</field>
        </record>





    </data>
</openerp>