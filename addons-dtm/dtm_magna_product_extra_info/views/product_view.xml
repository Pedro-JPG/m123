<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<record id="dtm_magna_extra_info_product" model="ir.ui.view">
            <field name="name">dtm.magna.extra.info.var</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Information']" position="inside">
                    <separator string="Información para presupuesto"/>
                	   <field name="extra_info" colspan="4"/>
                </xpath>
                <field name="type" position="after">
                    <field name="mano_obra"/>
                </field>
            </field>
        </record>

    

    <record id="dtm_magna_extra_info_template" model="ir.ui.view">
            <field name="name">dtm.magna.extra.info.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Information']" position="inside">
                    <separator string="Información para presupuesto"/>
                       <field name="extra_info" colspan="4"/>
                </xpath>
                <field name="type" position="after">
                    <field name="mano_obra"/>
                </field>
            </field>
        </record>



    </data>
</openerp>