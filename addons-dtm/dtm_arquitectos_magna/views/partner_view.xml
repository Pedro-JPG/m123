<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>


        <record id="view_arquitectos_form_extend" model="ir.ui.view">
            <field name="name">Arquitectos Form - Inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='active']" position="before">
                    <field name="es_arquitecto" attrs="{'invisible': [('es_arquitecto','=', False)]}"/>
                </xpath>


            </field>
        </record>


        <record id="action_arquitectos_form_view" model="ir.actions.act_window">
            <field name="name">Arquitectos</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="account.view_partner_property_form"/>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('es_arquitecto','=',True)]</field>
            <field name="context">{'default_es_arquitecto':1,'default_customer': 0}</field>
            <field name="filter" eval="True"/>
        </record>


        <menuitem id="menu_arquitectos_padre"
                  name="Arquitectos"
                  parent="account.menu_finance"
                  sequence="2"/>


        <menuitem action="action_arquitectos_form_view"
                  name="Arquitectos"
                  id="account.menu_account_obras"
                  parent="menu_arquitectos_padre"
                  sequence="100"
                  string="Arquitectos"
        />


    </data>
</openerp>

