<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="plist_wizard" model="ir.ui.view">
            <field name="name">pricelist.report.wizard</field>
            <field name="model">pricelist.report</field>
            <field name="arch" type="xml">
                <form string="Reporte">
                    <group col="4">
                        <group colspan="2">
                            <field name="plist_date" required="1"/>
                        </group>
                        <group colspan="2"/>
                    </group>
                    <footer>
                            <button name="get_pricelist" string="Generar Listado" type="object" default_focus="1" class="oe_highlight"/>

                            <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_plist_wizard" model="ir.actions.act_window">
                <field name="name">Listado de precios</field>
                <field name="res_model">pricelist.report</field>
                <field name="view_type">form</field>
                <field name="view_mode">form</field>
                <field name="view_id" ref="plist_wizard"/>
                <field name="target">new</field>
        </record>
        <menuitem action="action_plist_wizard"
            groups="base.group_no_one"
            id="menu_plist_wizard"
            parent="stock.menu_stock_product" sequence="2"/>
    </data>
</openerp>