<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="sale_order_res_partner_company_filter" model="ir.ui.view">
            <field name="name">sale.order.res.partner.company.filter</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" on_change="onchange_partner_id(partner_id, context)" domain="[('customer','=',True),('is_company','=',True)]" context="{'search_default_customer':1, 'show_address': 1}" options="{&quot;always_reload&quot;: True}"/>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="replace">
                    <field name="partner_invoice_id" groups="sale.group_delivery_invoice_address" context="{'default_type':'invoice'}" domain="[('customer','=',True),('is_company','=',True)]"/>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="replace">
                    <field name="partner_shipping_id" on_change="onchange_delivery_id(company_id, partner_id, partner_shipping_id, fiscal_position)" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}" domain="[('customer','=',True),('is_company','=',True)]"/>
                </xpath>
            </field>
        </record>


        <record id="purchase_order_res_partner_company_filter" model="ir.ui.view">
            <field name="name">purchase.order.res.partner.company.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" on_change="onchange_partner_id(partner_id, context)" context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}" domain="[('supplier','=',True),('is_company','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record id="account_invoice_res_partner_company_filter" model="ir.ui.view">
            <field name="name">account.invoice.res.partner.company.filter</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field string="Customer" name="partner_id" on_change="onchange_partner_id(type, partner_id, date_invoice, payment_term, partner_bank_id, company_id, context)" context="{'search_default_customer':1, 'show_address': 1}" options="{&quot;always_reload&quot;: True}" domain="[('customer', '=', True),('is_company','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record id="account_voucher_res_partner_company_filter" model="ir.ui.view">
            <field name="name">account.voucher.res.partner.company.filter</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_sale_receipt_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('customer','=',True),('is_company','=',True)]" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" string="Customer" context="{'search_default_customer':1, 'show_address': 1}" options="{&quot;always_reload&quot;: True}"/>
                </xpath>
            </field>
        </record>

        <record id="account_voucher_res_partner_company_filter_2" model="ir.ui.view">
            <field name="name">account.voucher.res.partner.company.filter.2</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('customer','=',True),('is_company','=',True)]" required="1" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" string="Customer" context="{'search_default_customer': 1}"/>
                </xpath>
            </field>
        </record>

        <record id="account_invoice_supplier_res_partner_company_filter" model="ir.ui.view">
            <field name="name">account.invoice.supplier.res.partner.company.filter</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field string="Supplier" name="partner_id" on_change="onchange_partner_id(type, partner_id, date_invoice, payment_term, partner_bank_id, company_id, context)" context="{'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}" domain="[('supplier', '=', True),('is_company','=',True)]"/>
                </xpath>
            </field>
        </record>

        <record id="account_voucher_purchase_recipt_res_partner_company_filter_2" model="ir.ui.view">
            <field name="name">account.voucher.purchace.recipt.supplier.res.partner.company.filter</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_purchase_receipt_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('supplier','=',True),('is_company','=',True)]" string="Supplier" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}"/>
                </xpath>
            </field>
        </record>

        <record id="account_voucher_vendor_payment_res_partner_company_filter" model="ir.ui.view">
            <field name="name">account.voucher.vendor.payment.res.partner.company.filter</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" required="1" invisible="context.get('line_type', False)" on_change="onchange_partner_id(partner_id, journal_id, amount, currency_id, type, date, context)" context="{'invoice_currency':currency_id, 'default_customer': 0, 'search_default_supplier': 1, 'default_supplier': 1}" string="Supplier" domain="[('supplier','=',True),('is_company','=',True)]"/>
                </xpath>
            </field>
        </record>



    </data>
</openerp>
