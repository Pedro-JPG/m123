<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_voucher_supplier_payment_inherit_button" model="ir.ui.view">
            <field name="name">account.voucher.supplier.button.inherit</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="model">account.voucher</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//field[@name='line_dr_ids']" position="before">
                    <button name="button_setear_vacio"
                            type="object"
                            string="Limpiar asignaciones"
                            states="draft"
                            class="oe_highlight"/>


                    <button name="button_eleminar_no_conciliado"
                            type="object"
                            string="Eliminar no Asignados"
                            class="oe_highlight"/>
                </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>